<div class="container" id="cont1">
  <h1 class="col-lg-6 col-md-10 col-sm-10 mt-4"><%= title %></h1>

  <hr />

  <div class="row justify-content-lg-center g-3 container mt-4">
    <dl class="row">
      <dt class="col-sm-2">Name:</dt>
      <dd class="col-sm-10"><%= survey.Name %></dd>

      <dt class="col-sm-2">Description</dt>
      <dd class="col-sm-10"><%= survey.Description %></dd>

      <dt class="col-sm-2">Start Date:</dt>
      <dd class="col-sm-10"><%= survey.StartDate %></dd>

      <dt class="col-sm-2">End Date:</dt>
      <dd class="col-sm-10"><%= survey.EndDate %></dd>

      <dt class="col-sm-2">Published:</dt>
      <dd class="col-sm-10"><%= survey.IsPublished ? 'Yes': 'No' %></dd>
    </dl>
  </div>

  <h4 class="col-lg-6 col-md-10 col-sm-10 my-4">Questions:</h4>

  <!-- Message Area -->
  <% if (messages.length > 0) { %>
  <div id="messageArea" class="alert alert-danger"><%= messages %></div>
  <% } %>

  <div class="mb-4">
    <a
      href="/survey/<%= survey.id %>/question/create"
      class="btn btn-primary"
      role="button"
    >
      <i class="fas fa-plus-circle"></i>&nbsp;Add Question
    </a>
  </div>

  <table
    class="table table-bordered table-striped table-hover"
    id="tableQuestions"
  >
    <!-- Header Row-->
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">Question</th>
      <th class="text-center">AnswerType</th>
      <th class="text-center">Order</th>
      <th></th>
      <th></th>
    </tr>

    <!-- Repeatable Template Row -->
    <% for(let i = 0; i < questions.length; i++) { const question =
    questions[i]; %>
    <tr>
      <td class="text-center"><%= question.id %></td>

      <td class="text-center"><%= question.Question %></td>

      <td class="text-center"><%= question.Type %></td>

      <td class="text-center">
        <button type="button" class="btn btn-sm">
          <i class="fas fa-angle-up"></i>
        </button>
        <button type="button" class="btn btn-sm">
          <i class="fas fa-angle-down"></i>
        </button>
      </td>

      <td class="text-center">
        <a
          href="/survey/<%= survey.id %>/question/<%= question.id %>/edit"
          class="btn btn-primary btn-sm"
        >
          <i class="fas fa-pencil-alt"></i>&nbsp;Edit
        </a>
      </td>

      <td class="text-center">
        <a
          href="/survey/<%= survey.id %>/question/<%= question.id %>/delete"
          class="btn btn-danger btn-sm delete"
          data-redirect="survey"
        >
          <i class="fas fa-trash-alt"></i>&nbsp;Delete
        </a>
      </td>
    </tr>
    <% } %>
  </table>
</div>
